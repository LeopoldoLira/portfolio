}
#backend__skills{
  transition: opacity 1500ms ease-in-out;
}

#project__movienies{
  transition: opacity 700ms ease-in-out, scale 200ms ease-in-out;
}
#project__content{
  transition: opacity 1500ms ease-in-out, scale 200ms ease-in-out;
}

#project__greenberg{
  transition: opacity 300ms ease-in-out, scale 200ms ease-in-out;
}

#github{
  transition: opacity 700ms ease-in-out, scale 200ms ease-in-out;
}

#contact{
  transition: opacity 1500ms ease-in-out, scale 200ms ease-in-out;
}


#linkedin{
  transition: opacity 2000ms ease-in-out, scale 200ms ease-in-out;
}

#catgif{
  background-image: url('/imgs/cat-typing.gif');
  background-position: center;
  background-size: cover;
}

 
#contact:hover, 
#linkedin:hover{
  box-shadow: 0px 0px 2px 1px rgba(255,255,255, 1);
  scale: 1.01;
}

#project__movienies:hover, 
#project__content:hover, 
#project__greenberg:hover, 
#github:hover{
  box-shadow: 0px 0px 2px 1px rgba(255,255,255, 1);
  scale: 1.01;
}

.observer__item{
  opacity: 0;
}

@media (min-width:1px) and (max-width:425px){
  #about-container{
    background-size: 50%;
    background-position-x: 100%;
    background-position-y: 105%;
  }
}


@media (min-width:426px) and (max-width:768px){
  #about-container{
    background-size: 50%;
  }
}



@media (min-width:769px) and (max-width:1024px){
