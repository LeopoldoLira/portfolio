}
#project__content{
  transition: opacity 1500ms ease-in-out, scale 300ms ease-in-out;
}

#project__greenberg{
  transition: opacity 300ms ease-in-out, scale 300ms ease-in-out;
}

#github{
  transition: opacity 700ms ease-in-out, scale 300ms ease-in-out;
}

#contact{
  transition: opacity 1500ms ease-in-out, scale 300ms ease-in-out;
}


#linkedin{
  transition: opacity 2000ms ease-in-out, scale 300ms ease-in-out;
}

 
#contact:hover, 
#linkedin:hover{
  box-shadow: 0px 0px 2px 1px rgba(255,255,255, 1);
  scale: 1.01;
}

#project__movienies:hover, 
#project__content:hover, 
#project__greenberg:hover, 
#github:hover{
  box-shadow: 0px 0px 2px 1px rgba(255,255,255, 1);
  scale: 1.01;
}

.observer__item{
  opacity: 0;
}



@media screen and (max-width:768px){
  #about-container{
    background-size: 65%;
  }
}

@media screen and (max-width:425px){
  #about-container{
    background-size: 50%;
    background-position-x: 100%;
    background-position-y: 125%;
  }
}

@media screen and (max-width:1024px){
  #about-container{
    background-size: 55%;
  }
}

@media screen and (min-width:2560px){
  #about-container{
    background-size: 50%;
  }
}

</style>

<script>
  const observerItems = document.querySelectorAll('.observer__item');

const options = {
  root:null,
  rootMargin:'0px',
  threshold:0.5
}

function handleIntersection(entries, observer){
  entries.forEach(entry =>{
    if (entry.isIntersecting){
      entry.target.style.opacity = 1;
      observer.unobserve(entry.target)
    }
  })
}

const observer = new IntersectionObserver(handleIntersection, options);

observerItems.forEach(item =>{
  observer.observe(item)
})
</script>