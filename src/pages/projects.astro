---
import Layout from "../layouts/HomeLayout.astro";
---

<Layout title="About myself | Leopoldo Lira" >
    <main class="w-full flex items-center justify-center h-screen pt-10 ">
        <div transition:name="projects-container" class="flex items-center w-[85%] h-auto mt-10 py-5 bg-[#c7d1ff] rounded-md bg-clip-padding backdrop-filter backdrop-blur-3xl bg-opacity-30 border border-gray-100">
